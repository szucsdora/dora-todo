{% extends "layout.html" %}
{% block content %}
<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        {{dump(todos)}}
        <h3>peldapista To-do listája</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-full-width">
          <tr>
            <th>Fealadatok</th>
            <th>
              <button type="text" class="btn btn-primary">Ami kész</button>
            </th>
            <th>
              <button type="text" class="btn btn-warning">?</button>
            </th>
            <th>
            </th>
          </tr>
          {% for todo in todos %}
            <tr>
              <td>{{ todo.taskName }}</td>
              <td>
                {% if todo.isDone == false %}
                  <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true">
                    </span>
                  </button>
                {% endif %}

                {% if todo.isDone == true %}
                  Kész
                {% endif %}
              </td>
              <td>
                <button type="button" class="btn btn-default">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true">
                  </span>
                </button>
              </td>
              <td>{{ todo.deadline|date("m/d/Y") }}</td>
            </tr>
          {% endfor %}
          <tr>
            <td rowspan="2">Új feladat hozzáadása</td>
            <td rowspan="2"><input type="text" placeholder="feladat-neve">
            <td rowspan="1"><textarea class="form-control" name="feladatleiras" rows="3" placeholder="leiras"></textarea></td>
          </tr>
          <tr>
            <td colspan="3">
              <button type="text" class="btn btn-info pull-right">Listáz</button>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}
