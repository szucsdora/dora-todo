{% extends "layout.html" %}

{% block content %}

<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Bejelentkezés</h3>
      </div>
      <div class="panel-body">
        <form action="{{ path('login') }}" method="post">
          <div class="form-group">
            <label for="exampleInputName2">Felhasználónév</label>
            <input type="text"
                id="username"
                name="_username"
                value="{{ last_username }}"
                class="form-control"
                placeholder="peldapista ">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Jelszó</label>
            <input type="password"
                class="form-control"
                id="password"
                name="_password"
                placeholder="Jelszó">
          </div>
          <button type="submit" class="btn btn-primary">Bejelnetkezés</button>
          <a class="pull-right" href="register"> Regisztráció</a>
        </div>
      </div>
    </div>
  </form>
</div>
{% endblock %}
