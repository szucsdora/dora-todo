{% extends "layout.html" %}

{% block content %}
<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Regisztráció</h3>
      </div>
      <div class="panel-body">
        <form name="user" method="post">
          <div class="form-group">
            <label for="user_fullname" class="required">Teljes név</label>
            <input type="text" class="form-control" id="user_fullname" name="user[fullName]" required="required" placeholder="Példa Pista">
          </div>
          <div class="form-group">
            <label for="user_username" class="required">Felhasználónév</label>
            <input type="text" class="form-control" id="user_username" name="user[username]" required="required" placeholder="peldapista ">
          </div>
          <div class="form-group">
            <label for="user_email" class="required">Email cím</label>
            <input type="email" class="form-control" id="user_email" name="user[email]" required="required" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="user_plainPassword_first" class="required">Jelszó</label>
            <input type="password" class="form-control" id="user_plainPassword_first" name="user[plainPassword][first]" required="required" placeholder="Jelszó">
          </div>
          <div class="form-group">
            <label for="user_plainPassword_second" class="required">Jelszó megerősítése</label>
            <input type="password" class="form-control" id="user_plainPassword_second" name="user[plainPassword][second]" required="required" placeholder="Jelszó megerősítés">
          </div>
          <button type="submit" class="btn btn-primary">Elküldés</button>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
